{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["./src/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src", "./.eslintrc.js", "./playwright.config.ts"],
    "exclude": ["node_modules", "dist"]
  }